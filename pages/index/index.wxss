.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}
.swiper-tab-item{
    width: 30%; 
    color:#434343;
}
.active{
    color:#F65959;
    border-bottom: 4rpx solid #F65959;
}
swiper{
  text-align: center;
}

#scroll-window {
   height: calc(100% - 88rpx); 
}

/* 顶部新闻 */
.hero-news {
  height: 350rpx;
  position: relative;
   margin: 30rpx; 
}

.hero-details {
  position: absolute;
  bottom: 0;
  margin: 10rpx;
  color: #FFFFFE;
}

.hero-detail {
  color: #929A99;
  font-size: 30rpx;
  line-height: 42rpx;
}

.hero-detail span {
  margin-right: 10rpx;
}

.hero-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  border-radius: 10rpx;
}

/* 底下普通新闻框 */
.news {
  position: relative;
  margin: 30rpx;
  height: 200rpx;
}

.title {
  display: block;
  width: calc(100% - 250rpx);
}

.news-image {
  position: absolute;
  right: 0;
  top: 0;
  width: 200rpx;
  height: 200rpx;
}

.news-detail {
  position: absolute;
  color: #929A99;
  font-size: 30rpx;
  line-height: 42rpx;
  bottom: 0;
}

.news-detail span {
  margin-right: 10rpx;
}

br {
  width: 90%;
  height: 5rpx;
  color: #00C777;
}

.line {
  width: 90%;
  height: 2rpx;
  background: #F3F3F3;
  margin: 0 5%;
}